{
    "name": "@nucleos/maps-bundle",
    "license": "MIT",
    "version": "1.0.0",
    "homepage": "https://nucleos.rocks",
    "author": "Christian Gripp <mail@core23.de>",
    "symfony": {
        "controllers": {
            "openstreetmap": {
                "main": "dist/openstreetmap_controller.js",
                "webpackMode": "lazy",
                "enabled": true,
                "autoimport": {
                    "@nucleos/maps-bundle/dist/openstreetmap.css": true
                }
            },
            "googlemaps": {
                "main": "dist/googlemaps_controller.js",
                "webpackMode": "lazy",
                "enabled": true,
                "autoimport": []
            }
        }
    },
    "dependencies": {
        "leaflet": "^1.7.1",
        "leaflet-extra-markers": "^1.1.0"
    },
    "peerDependencies": {
        "stimulus": "^2.0.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.13.10",
        "@babel/core": "^7.13.10",
        "@babel/eslint-parser": "^7.13.10",
        "@babel/plugin-proposal-class-properties": "^7.13.0",
        "@babel/plugin-transform-runtime": "^7.13.10",
        "@babel/preset-env": "^7.13.10",
        "@size-limit/preset-small-lib": "^4.10.1",
        "@symfony/stimulus-testing": "^1.1.0",
        "eslint": "^7.21.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-jest": "^24.2.1",
        "node-sass": "^5.0.0",
        "prettier": "^2.2.1",
        "size-limit": "^4.10.1",
        "stimulus": "^2.0.0"
    },
    "scripts": {
        "build": "babel src -d dist && yarn sass:build",
        "sass:build": "node-sass src -o dist",
        "sass:watch": "node-sass -w src -o dist",
        "test": "yarn build && jest",
        "lint": "eslint src test --fix",
        "format": "prettier {src,test}/*.js --write",
        "check-lint": "yarn lint --no-fix",
        "check-format": "yarn format --no-write --check",
        "size": "size-limit"
    },
    "prettier": {
        "printWidth": 120,
        "trailingComma": "es5",
        "tabWidth": 4,
        "jsxBracketSameLine": true,
        "singleQuote": true
    },
    "size-limit": [
        {
            "path": "./dist/*.js",
            "gzip": false,
            "limit": "165 KB"
        },
        {
            "path": "./dist/*.css",
            "gzip": false,
            "limit": "30 KB"
        }
    ],
    "jest": {
        "testRegex": "test/.*\\.test.js",
        "setupFilesAfterEnv": [
            "./test/setup.js"
        ]
    }
}
